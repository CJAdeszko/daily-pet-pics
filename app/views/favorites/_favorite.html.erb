<% if current_user %>
  <% if favorite = current_user.favorite_for(post) %>
    <%= link_to ('<i class="small material-icons">favorite</i>').html_safe, post_favorite_path(post, favorite), method: :delete, :onclick => 'topFunction()' %>
  <% else %>
    <%= link_to ('<i class="small material-icons">favorite_border</i>').html_safe, post_favorites_path(post, Favorite.new), method: :post, :onclick => 'topFunction()' %>
  <% end %>
<% end %>
