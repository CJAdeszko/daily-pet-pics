<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div>
  <h4>Search: </h4>
  <%= form_tag(posts_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search], placeholder: 'Search by title, username or tag') %>
    <%= submit_tag ("Search") %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user && post.user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <td><small>Tags: <%= raw post.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></small</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
